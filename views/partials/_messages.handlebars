{{#if success }}
<div class="alert alert-dismissible alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  {{ success }}
</div>
{{/if }}

{{#if logout }}
<div class="alert alert-dismissible alert-success logout-alert">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  {{ logout }}
</div>
{{/if }}

<div id="noBlanks" class="alert alert-danger noBlanks">
  <button type="button" class="close signUpClose">&times;</button>
  Please fill out all fields.
</div>

<div id="passwordMatch" class="alert alert-danger noBlanks">
  <button type="button" class="close signUpClose">&times;</button>
  Passwords do not match.
</div>
