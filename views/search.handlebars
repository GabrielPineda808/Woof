           <option>5</option>
         </select>
        </div>
        <!-- select age of dog-->
        <div class="form-group">
          <select class="form-control" id="age">
            <option>- Any Age -</option>
            <option>2</option>
            <option>3</option>
           <option>4</option>
           <option>5</option>
         </select>       
         </div>

        <!-- select temperment of dog-->
        <div class="form-group">
          <select class="form-control" id="temperment">
            <option>- Any Temperment -</option>
            <option>2</option>
            <option>3</option>
           <option>4</option>
           <option>5</option>
         </select>       
        </div>
        <!-- select with milage of dog-->
        <div class="form-group">
          <select class="form-control" id="within-miles">
            <option>- Within Any Miles -</option>
            <option>Within 25 Miles</option>
            <option>Within 26-50 Miles</option>
           <option>Within 51-99 Miles</option>
           <option>Within 100-500 Miles</option>
         </select>       
        </div>
        <!-- select gender of dog -->
        <div class="form-group">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="male" value="male">
            <label class="form-check-label" for="inlineRadio1">Male</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="female" value="female">
            <label class="form-check-label" for="inlineRadio1">Female</label>
          </div>
        </div>

        <!-- submit search button-->
        <button id="search-button" type="button" class="btn btn-primary mr-3">Search</button>
        <button type="button" id="clear" class="btn btn-warning">Clear</button>
      </form>
