{{> _navbar}}

<div class="wrapper">
  
  <!-- start of container-->
  <div class="container pl-0 pr-0">
    <h2 class="mt-5 mb-2">Featured Dogs</h2>
    <div class="row">
      <div class="col-md-9">
        <!---featured profile 1 -->
        <div class="card float-md-left mr-5 mb-5 " style="width: 18rem;">
          <img src="/assets/images/search1.png" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><a href="#">Bubba</a></h5>
            <p class="float-sm-left w-100"> Male - Dalmation - Coy</p>
            <a href="#" class="stretched-link">See Profile</a>
          </div>
        </div>
        <!---featured profile 2 -->
        <div class="card float-md-left mr-5 mb-5" style="width: 18rem;">
          <img src="/assets/images/search2.png" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><a href="#">Cleo</a></h5>
            <p class="float-sm-left w-100"> Female - Pug - Playful</p>
            <a href="#" class="stretched-link">See Profile</a>
          </div>
        </div>
      </div>

      <!-- start of search form -->
      <div class="col-md-3">
        <h3 class="mb-3">Search Dogs</h3>
        <form action='/api/search' id="dogsearch" method='POST' class="search-form">

          <!-- select breed of dog-->
          <div class="form-group">
            <select name="breed" class="form-control" id="breed">
              <option value=''>- Any Breed -</option>
              {{#each breeds }}
              <option>{{ this.breed }}</option>
              {{/each}}
            </select>
          </div>
          <!-- select age of dog-->
          <div class="form-group">
            <select name="age" class="form-control" id="age">
              <option value=''>- Any Age -</option>
              {{#each ages }}
              <option>{{ this.age }}</option>
              {{/each}}
            </select>       
          </div>

          <!-- select temperment of dog-->
          <div class="form-group">
            <select name="temperament" class="form-control" id="temperament">
              <option value=''>- Any Temperament -</option>
              {{#each temperaments }}
              <option>{{ this.temperament }}</option>
              {{/each}}
            </select>       
          </div>

          <!-- select gender of dog -->
          <div class="form-group">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="gender" id="male" value="m">
              <label class="form-check-label" for="inlineRadio1">Male</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="gender" id="female" value="f">
              <label class="form-check-label" for="inlineRadio1">Female</label>
            </div>
          </div>

          <!-- submit search button-->
          <button id="search-button" type="submit" class="btn btn-access mr-3">Search</button>
        </form>
      </div>
    </div>
  <!-- search resutls-->
  {{> _searchResults}}
  </div> 
</div>  

      


