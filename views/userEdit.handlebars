{{> _navbar}}
<div class="container ">
  <div class="row ">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 ">
      <div class="card shadow-lg mt-5">
        <div class="card-body">
            
          <form>
            <h1 class="register-title py-3">Edit Profile</h1>
            {{!-- user form --}}
            {{#unless dogEdit}}
            {{> _messages}}
            <div class="form-group">
              <input type="text" class="form-control" id="username" placeholder="Full Name" value="{{name}}">
            </div>
            <div class="form-group">
              <input type="email" class="form-control" id="useremail" placeholder="Email" value="{{email}}">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="userbio" placeholder="Bio" value="{{bio}}">
            </div>
            <button type="button" id="editUserBtn" class="btn btn-access">Save Edit</button>
            {{/unless}}
            {{!-- dog form --}}
            {{> _messagesDogReg}}
            {{#if dogEdit}}
            {{#each dog}}
            <div class="form-group">
              <input type="text" class="form-control" id="dName" placeholder="Name" value="{{this.name}}">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="breed" placeholder="Breed" value="{{this.breed}}">
            </div>
            <div class="form-group">
              <input type="number" class="form-control" id="age" placeholder="Age" value="{{this.age}}">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="temp" placeholder="Temperament" value="{{this.temperament}}">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="dBio" placeholder="Bio" value="{{this.bio}}">
            </div>
            {{/each}}
            <button type="button" id="editDogBtn" class="btn btn-access">Save Edit</button>
            {{/if}}
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>