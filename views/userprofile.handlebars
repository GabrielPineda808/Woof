{{> _navbar}}
<div class="wrapper">

  <div class="container">
    <h1 class="pt-3">{{name}}</h1><br>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu1">Pets</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu2">Reviews</a>
      </li>
      {{#if userEdit}}
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu3">Account</a>
      </li>
      {{/if}}
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      
      <div id="home" class="container tab-pane active"><br>
        <h2 class="profile-heading"> Information</h2>
        {{#if userEdit}}
        <button class="btn btn-access" id="userEdit">Edit</button>
        {{/if}}
        <p>{{bio}}</p>
        <p>Contact me at {{email}}</p>
      </div>
      
      <div id="menu1" class="container tab-pane fade"><br>
        <h2 class="profile-heading"> Pets</h3>
        {{#if userEdit}}
          <button class="btn btn-access" id="dogEdit">Edit</button>
        {{/if}}
        {{#each dog}}
          <div class="row">
            <div class="col-lg-5">
              <h4><strong>{{this.name}}</strong> {{#if dogReview}}
                <button type="button" class="btn btn-access mb-2 ml-2" id="dogReviewBtn">Review me!</button>
              {{/if}}</h4>
              
              <p><strong>Breed : </strong> {{this.breed}}</p>
              <p><strong>Age :</strong> {{this.age}}</p>
              <p><strong>Gender :</strong> {{this.gender}}</p>
              <p><strong>Temperament :</strong>{{this.temperament}}</p>
              <P><strong>Bio:</strong> <br>
                {{this.bio}}</P>
            </div>
            <div class="col-lg-7" id="reviewdog">
                <form>
                  <div class="form-group">
                    <label for="exampleFormControlInput1"><strong>Dog Name :</strong></label>
                    <input class="form-control" id="dogname" type="text" value="{{this.name}}" readonly>
                  </div>
                  <div class="form-group">
                    <label for="exampleFormControlInput1"><strong>Dates :</strong></label>
                    <input class="form-control" id="dates" type="number">
                  </div>
                  <div class="form-group">
                    <label for="exampleFormControlTextarea1"><strong>Review : </strong></label>
                    <textarea class="form-control border rounded" id="dogBody" placeholder="Leave a review ..."></textarea>
                  </div>
                  <label for="exampleFormControlTextarea1"><strong>Rating : </strong></label>
                  <div class="form-group rating">
                    <label>
                      <input type="radio" name="stars" value="1" />
                      <span class="icon">★</span>
                    </label>
                    <label>
                      <input type="radio" name="stars" value="2" />
                      <span class="icon">★</span>
                      <span class="icon">★</span>
                    </label>
                    <label>
                      <input type="radio" name="stars" value="3" />
                      <span class="icon">★</span>
                      <span class="icon">★</span>
                      <span class="icon">★</span>   
                    </label>
                    <label>
                      <input type="radio" name="stars" value="4" />
                      <span class="icon">★</span>
                      <span class="icon">★</span>
                      <span class="icon">★</span>
                      <span class="icon">★</span>
                    </label>
                    <label>
                      <input type="radio" name="stars" value="5" />
                      <span class="icon">★</span>
                      <span class="icon">★</span>
                      <span class="icon">★</span>
                      <span class="icon">★</span>
                      <span class="icon">★</span>
                    </label>
                  </div>
                  <button type="button" class="btn btn-access mb-2 ml-2" id="cancelBtn">Cancel</button>
                  <button type="button" class="btn btn-access mb-2 ml-2" id="dogSubmit">Submit Review</button>
                </form>
            </div>
          </div>
        {{/each}}
      </div>
      
      <div id="menu2" class="container tab-pane fade"><br>
        <h2 class="profile-heading"> Reviews</h2>
        <div class="container">
          <div class="card">
            <div class="card-body">
              <ul class="list-group">
                {{#each UserReview}}
                  {{>UserReview/_userReviewCard}}
                  <br>
                {{/each}}
              </ul>
            </div>
          </div>
          <div>
          {{#unless userEdit}}
            <form>
              <div class="form-group">
                <label for="exampleFormControlInput1"><strong>Username :</strong></label>
                <input class="form-control" id="username" type="text" value="{{email}}" readonly>
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1"><strong>Review : </strong></label>
                <textarea class="form-control border rounded" id="reviewBody" placeholder="Leave a review ..."></textarea>
              </div>
              <label for="exampleFormControlTextarea1"><strong>Rating : </strong></label>
              <div class="form-group rating">
                <label>
                  <input type="radio" name="stars" value="1" />
                  <span class="icon">★</span>
                </label>
                <label>
                  <input type="radio" name="stars" value="2" />
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                </label>
                <label>
                  <input type="radio" name="stars" value="3" />
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>   
                </label>
                <label>
                  <input type="radio" name="stars" value="4" />
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                </label>
                <label>
                  <input type="radio" name="stars" value="5" />
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                  <span class="icon">★</span>
                </label>
              </div>
              
              <button type="button" class="btn btn-access mb-2 ml-2" id="userReviewBtn">Submit Review</button>
            </form>
          {{/unless}}
          </div>
        </div>
      </div>

      <div id="menu3" class="container tab-pane fade"><br>
        <button class="btn btn-access" id="userEdit" data-toggle="modal" data-target="#confirmDelete">Delete Account</button>

        <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                But what about all your doggo friends?
              </div>
              <div class="modal-footer">
                
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Go Back</button>
                <button type="button" id="deleteBtn" class="btn btn-primary">Cats Are Better</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      

    </div>

  </div>
</div>
